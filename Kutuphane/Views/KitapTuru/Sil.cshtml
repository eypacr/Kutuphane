@model KitapTuru

<form method="post">
    <input asp-for="Id" hidden />
    <div class="container mt-5">
        <div class="border p-4">
            <div class="row pb-3">
                <h2 class="text-primary">Kitap Türü Sil</h2>
                <hr />
            </div>

            <div class="mb-3">
                <label asp-for="Ad" class="form-label">Kitap Türü Adı</label>
                <input asp-for="Ad" disabled class="form-control" />
            </div>

            <div class="row">
                <div class="col">
                    <button type="submit" class="btn btn-lg btn-danger" style="width: 100%;">
                        <i class="fas fa-trash-alt fa-lg fa-fw me-1"></i> Kitap Türü Sil
                    </button>
                </div>
                <div class="col">
                    <a asp-controller="KitapTuru" asp-action="Index" class="btn btn-lg btn-primary" style="width: 100%;">
                        <i class="fas fa-arrow-left fa-lg fa-fw me-1"></i> Kitap Türlerine Geri Dön
                    </a>
                </div>
            </div>

        </div>
    </div>
</form>

@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<h1>@ViewData["Title"]</h1>
<h2>Enter your email.</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control custom-border" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email" class="form-label form-label-custom"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg custom-btn">Reset Password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .custom-border {
        border: 2px solid #007bff;
        border-radius: 10px;
        box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }

    .form-label-custom {
        color: #007bff;
        font-weight: bold;
    }

    .form-floating .form-control:focus ~ .form-label-custom {
        color: #0056b3;
    }

    .custom-btn {
        background-color: #28a745; /* Change this color to customize the background */
        color: #fff; /* Button text color */
        border: none; /* Remove default border */
        border-radius: 10px; /* Rounded corners */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Shadow effect */
        transition: all 0.3s ease; /* Smooth transition for hover effect */
    }

        .custom-btn:hover {
            background-color: #218838; /* Darker shade for hover */
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3); /* Enhanced shadow on hover */
            transform: translateY(-2px); /* Slight upward movement on hover */
        }
</style>
